@page
@model CrudHoW.Pages.Funcionarios.IndexModel
@{
}

<h1>Funcionários</h1>
<a class="btn btn-primary btn-sm" href="/Funcionarios/Criar">Novo Funcionário</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Setor</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listarFuncionarios)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Setor</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Funcionarios/Editar?id=@item.Id">Editar</a>
                        <a class="btn btn-primary btn-sm" href="/Funcionarios/Deletar?id=@item.Id">Deletar</a>
                    </td>
                </tr>
        }
        
    </tbody>
</table>